(
    pkg_name_base    ::= LL_elem(.0,1);
    pkg_name_ext     ::= LL_elem(.0,2);
    path_beneath_pkg ::= LL_elem(.0,3);
    !LL_empty(pkg_name_base) and LL_empty(pkg_name_ext)
