/* SC_Pkg_Local_Alias example: Muldis_D */

Muldis_D.Source_Code.SC_Pkg_Local_Alias ::= SC_Identifier
    where (LL_payload(.0) isa $SC_Pkg_Local_Alias_Payload);

Muldis_D.Source_Code.SC_Pkg_Local_Alias_Payload ::=
